@{
}

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Member</h2>
          <ol>
            <li><a href="index.html">Home</a></li>
            <li>Member</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Us Section ======= -->
    <section id="contact-us" class="contact-us">
      <div class="container">

        <div>
          <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158857.72810735105!2d-0.24168086502108074!3d51.52877184068101!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon!5e0!3m2!1sen!2suk!4v1657299568283!5m2!1sen!2suk" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="row mt-5">

          <div class="col-lg-4">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>AAAAAA Street, London</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>Dofe@dofe.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+44 1234 5678 90</p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">


<form method="post" asp-action="Create" enctype="multipart/form-data">
     <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
                  <div class="row">
                <div class="col-md-6 form-group">
  <div class="form-group">
    <label asp-for="EventName">EventName</label>
    <input asp-for="EventName" class="form-control" placeholder="Please enter the event name. Ex. Sport Day 2022">
    <span asp-valiadation-for="EventName" class="text-danger"></span>
  </div>
    </div>

     <!--select-->
<div class="col-md-6 form-group">
    <div class="form-group">
    <label asp-for="EventCategory">Event category</label>
    <select asp-for="EventCategory" asp-items="@Html.GetEnumSelectList<EventCategory>()" class="form-control form-control-sm">
        <option>Select a category</option>
        </select>
         </div>
                  </div>

     <!--order table, table.column-->
     <div class="col-md-6 form-group">

  <div class="form-group mt-3">
    <label asp-for="EventTime">Day to visit</label>
    <input asp-for="EventTime" asp-format="{0:dd/MM/yyyy HH:mm}" class="form-control" />
    <span asp-valiadation-for="EventTime" class="text-danger"></span>
  </div>
  </div>


  <!---region-->
<div class="col-md-6 form-group mt-3">
  <div class="form-group">
    <label asp-for="Region">Region</label>
    <input asp-for="Region" class="form-control" placeholder="Ex. Victoria Park">
    <span asp-valiadation-for="Region" class="text-danger"></span>
  </div>
    </div>


  </div>
  <div class="form-group mt-3">
    <label asp-for="Introduction">Introduction</label>
    <textarea row="4" asp-for="Introduction" class="form-control" placeholder="Ex.Sports day is an occasion where pupils, teachers, and parents come together for a day of competitive sport..."></textarea>
    <span asp-valiadation-for="Introduction" class="text-danger"></span>
  </div>
      <div class="form-group mt-3">
    <label asp-for="Image">Image</label>
    <input asp-for="Image" class="form-control" type="file" placeholder="Ex.My dog sits on my lap, stretches his/her paws, and dangles to find the most comfortable position. I think he/she is the cutest pet I could wish for.">
    <span asp-valiadation-for="Image" class="text-danger"></span>
  </div>
    <div class="form-group pb-5 pt-5 text-center">
      <input class="btn btn-primary float right" type="submit" value="Create Event" />
      <a class="btn btn-outline-secondary" asp-controller="Member" asp-action="Index">Cancel</a>
  </div>
</form>
          </div>

        </div>

      </div>
    </section><!-- End Contact Us Section -->

  </main><!-- End #main -->