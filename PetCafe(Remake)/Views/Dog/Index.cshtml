@{
}


    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Dogs</h2>
          <ol>
            <li>Home</a></li>
            <li>Dogs</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
              @foreach(var item in Model)
              {
              <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Image" width="auto" height="auto" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@item.DogName</p>
                  <p class="card-text">@item.Introduction</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                        <a type="btn-success" asp-controller="Dog" asp-action="Detail" 
                        asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin")){
                        <a type="btn-success" asp-controller="Dog" asp-action="Edit" 
                        asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a type="btn-success" asp-controller="Dog" asp-action="Delete" 
                        asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                        }

                    </div>
                    <small class="text-muted">@item.DogCategory</small>
                  </div>
                </div>
              </div>
            </div>
          }
          </div>
        </div>
      </div>



