@using PetCafe_Remake_.ViewModels
@model List<UserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
  <thead>
    <tr>
      <th scope="col">UserName</th>
      <th scope="col">Image</th>
      <th scope="col">View Profile</th>
      <th scope="col">Gender</th>
      <th scope="col">Region</th>
    </tr>
  </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <img alt="Image profile avatar" src="@user.ProfileImageUrl" width="70px" height="70px" class="avatar">
                                </td>
                                <td>
                                    <div>

                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">View Profile</a>
                                    </div>
                                    </td>
                                <td><i class="icon-location"></i> @user.Gender</td>
                                <td><i class="icon-location"></i> @user.Region</td>
                                <td>
                                @if (User.IsInRole("Admin"))                                    {
                                    <a class="btn btn-outline-primary" asp-controller="Event" 
                                    asp-action="Edit" asp-route-id="@user.Id">View Profile</a>
                                    
                                    <a class="btn btn-outline-primary" asp-controller="Event" 
                                    asp-action="Delete" asp-route-id="@user.Id">View Profile</a>                   
                                    }
                                </td>
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
